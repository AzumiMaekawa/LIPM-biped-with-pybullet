<?xml version="1.0"?>
    <robot name="lip01">
        <link name="base"/>
            <!-- <inertial> -->
                <!-- <origin xyz="0 0 0" rpy="0 0 0"/> -->
                <!-- <mass value="0.0001"/> -->
                <!-- <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/> -->
            <!-- </inertial> -->
        <!-- </link> -->
        
        <!-- planar joint may cause a sudden jumping away motion & unnatural motion...?--> 
        <joint name="body_joint" type="fixed">
            <parent link="base"/>
            <child  link="body"/>
            <!-- 
            <axis xyz="0 1 0"/>
            -->
        </joint>
        <link name="body">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.5"/>
                <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0 0 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
            </collision>
        </link>
        
        <!-- left leg module -->
        <joint name="leftHip_joint" type="revolute">
            <origin xyz="0 -0.05 0" rpy ="0 0 0"/>
            <parent link="body"/>
            <child  link="leftUpperLeg"/>
            
            <axis xyz="0 1 0"/>
            <limit effort="10" velocity="1.0" lower="-2." upper="2."/>
        </joint>

        <link name="leftUpperLeg">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="3e-4" ixy="0" ixz="0" iyy="3e-4" iyz="0" izz="5e-6"/>
            </inertial>
            <visual>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
                <material name="Cyan">
                    <color rgba="0 1 1 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
            </collision>
        </link>

        <joint name="leftKnee_joint" type="revolute">
            <origin xyz="0 0 -0.2" rpy="0 0 0"/>
            <parent link="leftUpperLeg"/>
            <child  link="leftLowerLeg"/>

            <axis xyz="0 1 0"/>
            <limit effort="10" velocity="1.0" lower="-2" upper="2"/>
        </joint>

        <link name="leftLowerLeg">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="3e-4" ixy="0" ixz="0" iyy="3e-4" iyz="0" izz="5e-6"/>
            </inertial>
            <visual>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
                <material name="Green">
                    <color rgba="0 1 0 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
            </collision>
        </link>


<!--> -->
        <joint name="leftAnkle_joint" type="fixed">
            <origin xyz="0 0 -0.2" rpy="0 0 0"/>
            <parent link="leftLowerLeg"/>
            <child  link="leftFoot"/>
        </joint>

        <link name="leftFoot">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.01"/>
                <inertia ixx="4e-7" ixy="0" ixz="0" iyy="4e-7" iyz="0" izz="4e-7"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
                <material name="White">
                    <color rgba="1 1 1 1"/>
                </material>
            </visual> 
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </collision> 
        </link>

        <!-- left leg module end-->
        <!-- right leg module-->
        <joint name="rightHip_joint" type="revolute">
            <origin xyz="0 0.05 0" rpy ="0 0 0"/>
            <parent link="body"/>
            <child  link="rightUpperLeg"/>
            
            <axis xyz="0 1 0"/>
            <limit effort="10" velocity="1.0" lower="-2." upper="2."/>
        </joint>

        <link name="rightUpperLeg">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="3e-4" ixy="0" ixz="0" iyy="3e-4" iyz="0" izz="5e-6"/>
            </inertial>
            <visual>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
            </collision>
        </link>

        <joint name="rightKnee_joint" type="revolute">
            <origin xyz="0 0 -0.2" rpy="0 0 0"/>
            <parent link="rightUpperLeg"/>
            <child  link="rightLowerLeg"/>

            <axis xyz="0 1 0"/>
            <limit effort="10" velocity="1.0" lower="-2." upper="2."/>
        </joint>

        <link name="rightLowerLeg">
            <inertial>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="3e-4" ixy="0" ixz="0" iyy="3e-4" iyz="0" izz="5e-6"/>
            </inertial>
            <visual>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 -0.1" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="0.01" length="0.2"/>
                </geometry>
            </collision>
        </link>

        <joint name="rightAnkle" type="fixed">
            <origin xyz="0 0 -0.2" rpy="0 0 0"/>
            <parent link="rightLowerLeg"/>
            <child  link="rightFoot"/>
        </joint>

        <link name="rightFoot">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.03"/>
                <inertia ixx="4e-7" ixy="0" ixz="0" iyy="4e-7" iyz="0" izz="4e-7"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
                <material name="red">
                    <color rgba="1 0 0 1"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </collision>
        </link> 
    </robot>

